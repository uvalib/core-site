---
layout: basicLearningLayout.njk
pagination:
    data: learningLevel2
    size: 1
    alias: lL2Item
permalink: "pages/services/learning/{{lL2Item.name | slug}}/index.html"
eleventyComputed:
    title: "Learning Resources: {{lL2Item.name}}"
---
<style>
    .learning__h1 {
        margin-bottom: .25em;
    }
    .learning__header {
        margin-top: 3em;
        border-bottom: 2px solid var(--uvalib-grey);
    }
    .learning__header h2 {
        margin-bottom: .5em;
    }
    .learning__header i {
        margin-right: .5em;
    }
    .learning__container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: flex-start;
        align-content: flex-start;
        align-items: flex-start;
        margin-left: 3em;
    }
    .learning__container div {
        min-width: 150px;
        max-width: 210px;
        margin-top: 2em;
        margin-right: 2em;
    }
    .learning__container--youtube {
        width: 100%;
    }
</style>


{% for l1 in learningLevel1 %}
    {% if lL2Item.parent == l1.uuid %}
        <h1 class="learning__h1">{{ l1.name }}</h1>
        {{ l1.description | safe }}
    {% endif %}
{% endfor %}
<div class="learning__header">
    <h2>{{ lL2Item.name }}</h2>
</div>
<div class="learning__container">

{% for l3 in learningLevel3 %}
    {% if lL2Item.uuid in l3.tags and not l3.youtube and not l3.youtubelist %}
        <div>
            <div class="h5"><a href="{{ l3.learningItemUrl }}">{{ l3.title }}</a></div>
            {{ l3.body | safe }}
        </div>
    {% endif %}
{% endfor %}

{% for l3 in learningLevel3 %}
    {% if lL2Item.uuid in l3.tags %}
        {% if l3.youtube or l3.youtubelist %}
<div>
    <div><a href="{{ l3.learningItemUrl }}" target="_blank"><img aria-labelledby="{{ l3.uuid }}" class="learning__container--youtube" src="{{ l3.youtubethumb }}" alt="video thumbnail"></img></a></div>
    <div class="h5"><a id="{{ l3.uuid }}" href="{{ l3.learningItemUrl }}">{{ l3.title }}</a></div>
    {{ l3.body | safe }}
</div>

        {% endif %}
    {% endif %}
{% endfor %}

</div>