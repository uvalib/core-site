---
layout: basicLearningLayout.njk
pagination:
    data: learningLevel2
    size: 1
    alias: lL2Item
permalink: "pages/services/learning/{{lL2Item.name | slug}}/index.html"
eleventyComputed:
    title: "Learning Resources: {{lL2Item.name}}"
---
<style>
    .learning__h1 {
        margin-bottom: .25em;
    }
    .learning__header {
        margin-top: 3em;
        border-bottom: 2px solid var(--uvalib-grey);
    }
    .learning__header h2 {
        margin-bottom: .5em;
    }
    .learning__header i {
        margin-right: .5em;
    }
    .learning__container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: flex-start;
        align-content: flex-start;
        align-items: flex-start;
        margin-left: 3em;
    }
    .learning__container div {
        min-width: 150px;
        max-width: 210px;
        margin-top: 2em;
        margin-right: 2em;
    }
    .learning__container--youtube {
        width: 100%;
    }
</style>


{% for l1 in learningLevel1 %}
    {% if lL2Item.parent == l1.uuid %}
        <h1 class="learning__h1">{{ l1.name }}</h1>
        {{ l1.description | safe }}
    {% endif %}
{% endfor %}
<div class="learning__header">
    <h2>{{ lL2Item.name }}</h2>
</div>
<div class="learning__container">

{% for l3 in learningLevel3 %}
    {% if lL2Item.uuid in l3.tags and not l3.youtube and not l3.youtubelist %}
        <div>
            <h3 class="h5"><a href="{{ l3.learningItemUrl }}">{{ l3.title }}</a></h3>
            {{ l3.body | safe }}
        </div>
    {% endif %}
{% endfor %}

{% for l3 in learningLevel3 %}
    {% if lL2Item.uuid in l3.tags %}
        {% if l3.youtube or l3.youtubelist %}
<div>
    <sp-theme>
        <overlay-trigger type="modal" placement="none">
            <sp-dialog-wrapper
                slot="click-content"
                dismissable
                underlay
                no-divider
            >
            <h2>content here</h2>
                {% if l3.youtube %}<google-youtube fluid video-id="{{ l3.youtube }}" fluid></google-youtube>{% endif %}
                {% if l3.youtubelist %}<google-youtube list="{{ l3.youtubelist }}" list-type="playlist" fluid></google-youtube>{% endif %}
            </sp-dialog-wrapper>
            <img class="learning__container--youtube" slot="trigger" src="{{ l3.youtubethumb }}" alt="video thumbnail" style="cursor:pointer"></img>
        </overlay-trigger>
    </sp-theme>

                {% if l3.youtube %}<google-youtube fluid video-id="{{ l3.youtube }}" fluid></google-youtube>{% endif %}
                {% if l3.youtubelist %}<google-youtube list="{{ l3.youtubelist }}" list-type="playlist" fluid></google-youtube>{% endif %}

    <h3 class="h5"><a href="{{ l3.learningItemUrl }}">{{ l3.title }}</a></h3>
    {{ l3.body | safe }}
</div>

        {% endif %}
    {% endif %}
{% endfor %}

</div>