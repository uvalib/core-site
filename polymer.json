{
  "entrypoint": "index.html",
  "shell": "src/uvalib-app.html",
  "fragments": [
    "src/uvalib-article.html",
    "src/news-path-warning.html",
    "src/lazy-resources.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "data/*",
    "data/**/*",
    "files/*",
    "files/**/*"
  ],
  "extraDependencies": [
    ".htaccess",
    "manifest.json",
    "bower_components/webcomponentsjs/*",
    "bower_components/uvalib-header/uvalib-simple-header.html",
    "fonts/*"
  ],
  "lint": {
    "rules": ["polymer-2-hybrid"]
  },
  "builds": [
    {
      "name": "unbundled-custom",
      "bundle": false,
      "js": {"compile":true, "minify": true},
      "css": {"minify": true},
      "html": {"minify": true}
    },
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-unbundled"
    },
    {
      "preset": "es6-bundled"
    }
  ]
}
