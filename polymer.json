{
  "entrypoint": "index.html",
  "shell": "src/uvalib-app.html",
  "sources": [
    "src/**/*",
    "images/**/*",
    "data/*",
    "data/**/*",
    "files/*",
    "files/**/*",
    "files-comp/*",
    "files-comp/**/*"
  ],
  "extraDependencies": [
    ".htaccess",
    "manifest.json",
    "data/pages.json",
    "bower_components/webcomponentsjs/*",
    "bower_components/uvalib-header/uvalib-header-lazyload.html",
    "bower_components/uva-helper-libs/polyfills.html",
    "bower_components/uva-helper-libs/polyfills/*",
    "bower_components/iframe-resizer/js/*",
    "bower_components/es6-promise/*",
    "fonts/*"
  ],
  "lint": {
    "rules": ["polymer-2-hybrid"]
  },
  "builds": [
    {
      "name": "es5-unbundled",
      "js": {"minify": false, "compile": true},
      "css": {"minify": true},
      "html": {"minify": true},
      "addServiceWorker": false,
      "addPushManifest": false,
      "insertPrefetchLinks": false
    },
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-unbundled",
      "js": { "minify" : false }
    }
  ]
}
