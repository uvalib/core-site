{
  "entrypoint": "index.html",
  "shell": "src/uvalib-app.html",
  "fragments": [
    "src/uvalib-article.html",
    "src/news-path-warning.html",
    "src/lazy-resources.html",
    "bower_components/uvalib-page/uvalib-pre-services.html",
    "bower_components/uvalib-page/uvalib-services.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "data/*",
    "data/**/*",
    "files/*",
    "files/**/*",
    "files-comp/*",
    "files-comp/**/*"
  ],
  "extraDependencies": [
    ".htaccess",
    "manifest.json",
    "js/load-deps.js",
    "bower_components/webcomponentsjs/*",
    "bower_components/uvalib-header/uvalib-simple-header.html",
    "bower_components/uva-helper-libs/polyfills.html",
    "bower_components/uva-helper-libs/polyfills/*",
    "bower_components/iframe-resizer/js/*",
    "fonts/*"
  ],
  "lint": {
    "rules": ["polymer-2-hybrid"]
  },
  "builds": [
    {
      "name": "es5-unbundled",
      "js": {"minify": false, "compile": true},
      "css": {"minify": true},
      "html": {"minify": true},
      "addServiceWorker": false,
      "addPushManifest": false,
      "insertPrefetchLinks": false
    },
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-unbundled",
      "js": { "minify" : false }
    }
  ]
}
