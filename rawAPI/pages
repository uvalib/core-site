003C\/ol\u003E\r\n\r\n\u003Ch2\u003EPrivacy of Registration Information\u003C\/h2\u003E\r\n\r\n\u003Cp\u003ECustomer privacy and data security are primary concerns to CAS. No personal information collected during product registration, such as name, address, and phone number, will be given or sold to any outside organization for its use in marketing or solicting without customer consent. Likewise, the information will not be shared with agents or contrators of CAS for the purposes of performing services or providing support for CAS.\u003C\/p\u003E\r\n\r\n\u003Cp\u003EFor help and instructional support, please contact Jeremy Garritano at \u003Ca href=\u0022mailto:jeremyg@virginia.edu\u0022\u003E\u003Cstrong\u003Ejeremyg@virginia.edu\u003C\/strong\u003E\u003C\/a\u003E or telephone 982-0054.\u003C\/p\u003E\r\n","format":"basic_html","summary":""}],"field_parent_page":[],"field_path":[{"value":"\/scifinder-online\/"}],"field_serve_via_iframe":[],"field_sidebar":[],"field_subnav":[],"field_upload_a_file":[]},{"nid":[{"value":917}],"uuid":[{"value":"874543ec-c5c3-4071-b456-19064fc8d1ca"}],"vid":[{"value":3179}],"langcode":[{"value":"en"}],"type":[{"target_id":"page","target_type":"node_type","target_uuid":"17745858-15d2-4bcb-bc99-14fe05bb598b"}],"status":[{"value":true}],"title":[{"value":"Whoops! We couldn\u2019t find the page you\u2019re looking for. (404 error)"}],"uid":[{"target_id":12,"target_type":"user","target_uuid":"439d086d-5c77-4435-8ce2-0d00e5f90bed","url":"\/user\/12"}],"created":[{"value":1515162110}],"changed":[{"value":1518449414}],"promote":[{"value":false}],"sticky":[{"value":false}],"revision_timestamp":[{"value":1518449414}],"revision_uid":[{"target_id":29,"target_type":"user","target_uuid":"6a90bc39-8567-443e-9726-9ea9be8145fa","url":"\/user\/29"}],"revision_log":[],"revision_translation_affected":[{"value":true}],"default_langcode":[{"value":true}],"path":[],"publish_on":[],"unpublish_on":[],"body":[{"value":"\u003Cdiv class=\u0022layout horizontal wr