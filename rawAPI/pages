nd Engineering\u003C\/a\u003E\u003C\/li\u003E\r\n\u003C\/ul\u003E\r\n\r\n\u003Cp\u003EOr, make a deposit to your\u0026nbsp;\u003Ca href=\u0022http:\/\/www.virginia.edu\/cavalieradvantage\/\u0022\u003ECavalier Advantage\u003C\/a\u003E\u0026nbsp;card\u0026nbsp;\u003Ca href=\u0022http:\/\/www.virginia.edu\/cavalieradvantage\/onlinedepositinfo.html\u0022\u003Eonline\u003C\/a\u003E\u0026nbsp;or\u0026nbsp;\u003Ca href=\u0022http:\/\/www.virginia.edu\/cavalieradvantage\/faq.html#deposit\u0022\u003Evia phone or mail\u003C\/a\u003E.\u003C\/p\u003E\r\n\r\n\u003Cp\u003ELearn more about\u0026nbsp;\u003Ca href=\u0022\/services\/computing\/\u0022\u003EComputing Information\u003C\/a\u003E\u0026nbsp;|\u0026nbsp;\u003Ca href=\u0022\/services\/digitization\/\u0022\u003EDigitization\u003C\/a\u003E\u0026nbsp;|\u0026nbsp;\u003Ca href=\u0022\/services\/scanning-self-service\/\u0022\u003ESelf-Service Scanning\u003C\/a\u003E\u003C\/p\u003E\r\n\r\n\u003Cp\u003E\u0026nbsp;\u003C\/p\u003E\r\n","format":"basic_html","summary":""}],"field_parent_page":[{"target_id":1107,"target_type":"node","target_uuid":"8d40f2c4-6a70-4e17-b1c2-7984b32909ac","url":"\/node\/1107"}],"field_path":[{"value":"\/services\/printing-photocopying\/"}],"field_serve_via_iframe":[],"field_sidebar":[],"field_subnav":[],"field_upload_a_file":[]},{"nid":[{"value":714}],"uuid":[{"value":"0151313f-af54-4344-8569-88529369afd1"}],"vid":[{"value":3950}],"langcode":[{"value":"en"}],"type":[{"target_id":"page","target_type":"node_type","target_uuid":"17745858-15d2-4bcb-bc99-14fe05bb598b"}],"status":[{"value":true}],"title":[{"value":"Faculty Services"}],"uid":[{"target_id":12,"target_type":"user","target_uuid":"439d086d-5c77-4435-8ce2-0d00e5f90bed","url":"\/user\/12"}],"created":[{"value":1497966353}],"changed":[{"value":1521681430}],"promote":[{"value":false}],"sticky":[{"value":false}],"revision_timestamp":[{"value":1521681430}],"revision_uid":[{"target_id":22,"target_type":"user","target_uuid":"0da2c5ee-4a8f-40a4-9b16-d3a48431ae